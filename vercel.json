{
    "version": 2,

    "builds": [
        { "src": "backend/server.js", "use": "@vercel/node" },
        { "src": "frontend/index.html", "use": "@vercel/static" },
        { "src": "public/**/*", "use": "@vercel/static" }
    ],

    "routes": [
        { "src": "/", "dest": "/frontend/index.html" },
        { "src": "/sobre", "dest": "/backend/server.js" }
    ],

    "env": {
        "PORT": "3333",
        "NODE_ENV": "production npm start"
    }
}
